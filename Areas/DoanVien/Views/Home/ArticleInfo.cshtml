@model QLDV.Data.Article
<html>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <head>
         <link rel="stylesheet" href="~/DoanVien/assets/vendors/bootstrap/bootstrap.bundle.min.js">
  <link rel="stylesheet" href="~/DoanVien//assets/vendors/fontawesome/css/all.min.css">
  <link rel="stylesheet" href="~/DoanVien/assets/vendors/themify-icons/themify-icons.css">
  <link rel="stylesheet" href="~/DoanVien/assets/vendors/linericon/style.css">
  <link rel="stylesheet" href="~/DoanVien/assets/vendors/owl-carousel/owl.theme.default.min.css">
  <link rel="stylesheet" href="~/DoanVien/assets/vendors/owl-carousel/owl.carousel.min.css">

  <link rel="stylesheet" href="~/DoanVien/dist/css/style.css">
    </head>
    <body  >
 <section class="blog-post-area section-margin">
    <div class="container">
     <div class="row">
             <div class="col-lg-8">
         <div>
            <div class="row">
            <div class="col-md-12" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">
                <h2 style="margin: 5px 0;font-size: 26px;">
                    <a style="color: #337ab7;text-decoration: none;"  >
                      @Model.Title
                    </a>
                </h2>
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <div class="col-md-12" style="color: #888; padding-bottom: 10px; border-bottom: 1px solid #E8E8E8; margin-bottom: 10px;">
                <span>Ngày đăng:&nbsp;</span><span style="color:#1b8d06">@Model.CreatedAt</span>
                &nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
                <span>Người đăng:&nbsp;&nbsp;<i class="fa fa-user"></i>&nbsp;</span><span style="font-size:14px;color:#ff6a00">
               Admin
                </span>
                &nbsp;&nbsp;&nbsp;&nbsp;
            </div>
        </div>
        
        <div class="row" style="margin-top:10px">
            <div class="col-md-10 col-md-offset-1" style="line-height:25px;font-family:Helvetica Neue,Helvetica,Arial,sans-serif;font-size:15px">
                <p>@Model.Content</p>
                <a class="btn btn-outline-warning" href="~/Articles/@Model.Pdf">@Model.Pdf</a>
            </div>
        </div>

      
        </div> 
        </div>
          

     
        

        <!-- Start Blog Post Siddebar -->
          </div>
        <!-- End Blog Post Siddebar -->
      </div>
  </section>
    </body>
</html>