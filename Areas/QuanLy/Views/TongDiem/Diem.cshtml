@model List<QLDV.Areas.QuanLy.Models.TongDiemModel>
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <form class="form-horizontal" method="post" asp-area="QuanLy" asp-controller="TongDiem" asp-action="TimKiem">
                <div class="form-group">
                    <label>
                        Thống kê

                    </label>
                    <div class="row">
                        <div class="col-md-9">
                            <select name="Ki" asp-items="ViewBag.Semester" class="select2 form-select shadow-none"
                                    style="width: 100%; height: 36px">
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary">
                                Tìm Kiếm
                            </button>
                        </div>

                    </div>

                </div>
            </form>
        </div>
    </div>


    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="zero_config"
                       class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Mã tài khoản
                            </th>
                            <th>
                                Tên Đoàn viên
                            </th>
                            <th>
                                Số lần tham gia
                            </th>
                            <th>
                                Tổng điểm
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count >= 1)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.UserId
                                    </td>
                                    <td>
                                        @item.UserFullName
                                    </td>
                                    <td>
                                        @item.Count
                                    </td>
                                    <td>
                                        @item.TongDiem
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>