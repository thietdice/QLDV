@model QLDV.Data.EventUser
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div style="border: 5px solid #555">
                        <img class="img-fluid" src="~/Users/Images/EventUser/@Model.Image" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal" method="post" asp-area="QuanLy" asp-controller="Duyet" asp-action="Edit" asp-route-id="@Model.Id">
                        <div class="card-body">
                            <h4 class="card-title">Duyệt Minh Chứng</h4>

                            <div class="form-group">
                                <label>
                                    Lời nhắn
                                </label>
                                <textarea asp-for="Note"
                                          class="form-control" readonly>
                                </textarea>
                            </div>

                            <div class="form-group">
                                <label>
                                    Nhận xét
                                </label>
                                <textarea asp-for="NoteReviewer"
                                          class="form-control">
                                </textarea>
                            </div>

                            <div class="form-group">
                               
                                <div class="input-group">
                                    <select asp-for="Status" class="select2 form-select shadow-none"
                                            style="width: 100%; height: 36px">
                                        <option value="Từ chối">
                                               Từ Chối
                                           </option>
                                        <option value="Thông qua">
                                               Thông qua
                                           </option>
                                    </select>
                                </div>
                            </div>

                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary">
                                    Xác nhận
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


        
