@{
    ViewData["Title"] = "Đoàn Viên";
}
@model List<QLDV.Data.User>
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Danh sách Đoàn Viên</h5>
            <a asp-area="QuanLy" asp-controller="ThanhVien" asp-action="Add">
                <span> Thêm Đoàn Viên </span>
            </a>
            <div class="table-responsive">
                <table id="zero_config"
                       class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th width="50">
                                Ảnh
                            </th>
                            <th>
                                Chức vụ
                            </th>
                            <th>
                                Mã sinh viên
                            </th>
                            <th>
                                Chi Đoàn
                            </th>
                            <th>
                                Họ và tên
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count >= 1)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        <img src="~/Users/images/@item.Image" width="50" height="50">
                                    </td>
                                    <td>
                                        @item.UserCatalogueId
                                    </td>
                                    <td>
                                        @item.IdStudent
                                    </td>
                                    @foreach (var c in ViewBag.Class)
                                    {
                                        if (c.Id == item.ClassId)
                                        {
                                            <td>
                                                @c.Title
                                            </td>
                                        }
                                    }
                                    <td>
                                        @item.Fullname
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-success" asp-controller="ThanhVien" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>

                                        <a class="btn btn-outline-danger" asp-controller="ThanhVien" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                                    </td>
                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
