@{
    ViewData["Title"] = " Chi Đoàn";
}
@model List<QLDV.Data.Class>
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Danh sách Chi Đoàn</h5>
            <a asp-controller="ChiDoan" asp-action="Add">
                <span> Thêm Chi Đoàn </span>
            </a>
            <div class="table-responsive">
                <table id="zero_config"
                       class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                Liên Chi Đoàn
                            </th>
                            <th>
                                Tên Chi Đoàn
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            if (Model != null && Model.Count >= 1)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        @{
                                            foreach (var fac in ViewBag.Faculties)
                                            {
                                                if (fac.Id == item.FacultyId)
                                                {
                                                    <td>
                                                        @fac.Title
                                                    </td>
                                                }
                                            }
                                        }
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>

                                            <a class="btn btn-outline-success" asp-area="QuanLy" asp-controller="ChiDoan" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                                            <a class="btn btn-outline-warning" asp-area="QuanLy" asp-controller="ChiDoan" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                                            <a class="btn btn-outline-danger" asp-area="QuanLy" asp-controller="ChiDoan" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
